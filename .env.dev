# =============================================================================
# .env.dev - Variables d'environnement DÃ‰VELOPPEMENT
# =============================================================================

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
NODE_ENV=development
APP_ENV=dev

# -----------------------------------------------------------------------------
# Database PostgreSQL (local via Docker)
# -----------------------------------------------------------------------------
POSTGRES_USER=cdiagvet
POSTGRES_PASSWORD=cdiagvet_dev_pwd
POSTGRES_DB=cdiagvet_dev

# URL via PgBouncer (connection pooling)
DATABASE_URL=postgresql://cdiagvet:cdiagvet_dev_pwd@localhost:6432/cdiagvet_dev

# URL directe (pour migrations Prisma)
DIRECT_DATABASE_URL=postgresql://cdiagvet:cdiagvet_dev_pwd@localhost:5432/cdiagvet_dev

# -----------------------------------------------------------------------------
# Redis (local via Docker)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=dev-secret-key-not-for-production-use-only
JWT_EXPIRES_IN=7d

# -----------------------------------------------------------------------------
# Server
# -----------------------------------------------------------------------------
SERVER_PORT=3000
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Frontend
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:3000/graphql
VITE_APP_ENV=development

# -----------------------------------------------------------------------------
# Development features
# -----------------------------------------------------------------------------
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_DEBUG_LOGGING=true
RATE_LIMIT_ENABLED=false
