# =============================================================================
# .env.demo - Variables d'environnement DÉMONSTRATION
# Copier vers .env et adapter les valeurs selon l'infrastructure
# =============================================================================

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
NODE_ENV=staging
APP_ENV=demo

# -----------------------------------------------------------------------------
# Database PostgreSQL (instance DEMO dédiée)
# -----------------------------------------------------------------------------
POSTGRES_USER=cdiagvet_demo
POSTGRES_PASSWORD=CHANGE_ME_DEMO_DB_PASSWORD
POSTGRES_DB=cdiagvet_demo

# URL via PgBouncer
DATABASE_URL=postgresql://cdiagvet_demo:CHANGE_ME@pgbouncer-demo:5432/cdiagvet_demo

# URL directe (pour migrations Prisma)
DIRECT_DATABASE_URL=postgresql://cdiagvet_demo:CHANGE_ME@postgres-demo:5432/cdiagvet_demo

# -----------------------------------------------------------------------------
# Redis (instance DEMO dédiée)
# -----------------------------------------------------------------------------
REDIS_PASSWORD=CHANGE_ME_DEMO_REDIS_PASSWORD
REDIS_URL=redis://:CHANGE_ME_DEMO_REDIS_PASSWORD@redis-demo:6379

# -----------------------------------------------------------------------------
# JWT Authentication
# Générer avec: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
# -----------------------------------------------------------------------------
JWT_SECRET=CHANGE_ME_GENERATE_UNIQUE_SECRET_FOR_DEMO
JWT_EXPIRES_IN=14d

# -----------------------------------------------------------------------------
# Server
# -----------------------------------------------------------------------------
SERVER_PORT=3000
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Frontend
# -----------------------------------------------------------------------------
VITE_API_URL=https://demo-api.cdiagvet.fr/graphql
VITE_APP_ENV=demo

# -----------------------------------------------------------------------------
# Ports exposés
# -----------------------------------------------------------------------------
HTTP_PORT=80
HTTPS_PORT=443

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
CORS_ORIGIN=https://demo.cdiagvet.fr

# -----------------------------------------------------------------------------
# Demo features
# -----------------------------------------------------------------------------
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_DEBUG_LOGGING=false
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100

# -----------------------------------------------------------------------------
# Optionnel: Données de démo
# -----------------------------------------------------------------------------
# DEMO_RESET_SCHEDULE=0 0 * * *  # Reset quotidien à minuit
# DEMO_SEED_ON_STARTUP=true
